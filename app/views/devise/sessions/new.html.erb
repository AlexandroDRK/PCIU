<div class="vh-100 wh-100 d-flex flex-column align-items-center justify-content-center">
  <div class="border border-darker-subtle border-2 rounded-5 p-5 text-center">
    <h1 class="fw-bold">PCIU</h1>
    <h5 class="text-secondary">LOGIN</h5>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-3 text-start">
        <h5><%= f.label :email %></h5>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control rounded-pill border border-2' %>
      </div>
  
      <div class="field mb-3 text-start">
        <h5><%= f.label :password, 'Senha' %></h5>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control rounded-pill border border-2' %>
      </div>
  
      <% if devise_mapping.rememberable? %>
        <div class="field mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Lembrar de mim?' %>
        </div>
      <% end %>
  
      <div class="actions mb-3">
        <%= f.submit "Entrar", class: "btn btn-dark px-5 fw-bold" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
