<div class="container row">
    <div class='col-sm-4 text-center'>
        <h4><%= link_to "Meus Comunicados", root_path, class: "nav-link mb-3 bg-dark bg-opacity-10 rounded-pill p-3 m-2" %></h4>
        <% if current_usuario.tipo == 'Professor' %>
            <h4><%= link_to "Criar Comunicado", criar_comunicado_path, class: "nav-link mb-3 border border-2 border-dark border-opacity-10 rounded-pill p-3 m-2" %></h4>
        <% end %>
    </div>
    <div class='col-sm-8'>
        <% @comunicados.each do |comunicado| %>
            <a href="<%= comunicado_path(id: comunicado.id) %>" class='text-decoration-none text-dark'>
                <div class="container card mb-5 border border-darker-subtle border-2 rounded-3">
                    <div class="card-body">
                        <h3 class= "card-tittle fw-bold"><%= comunicado.titulo %></h3>
                        <p class="cardk-text text-dark"><%= comunicado.corpo %></p>
                        <% if current_usuario.tipo == 'Professor' %>
                            <span class="text-end"><%= button_to  "Excluir?",excluir_comunicado_path(id: comunicado.id), method: :delete, class:"btn btn-default fw-semibold text-danger"%></span>
                        <% end %>
                    </div>
                </div>
            </a>
        <% end %>
    </div>
</div>